# Django Settings
SECRET_KEY=django-insecure-dev-key-change-me-in-production-abc123xyz789
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
ENVIRONMENT=development

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/lebenis_db

# =============================================================================
# STORAGE - Cloudinary (Image Storage)
# =============================================================================
# Create free account: https://cloudinary.com/users/register/free
# Get credentials from: https://cloudinary.com/console
# Free tier: 25 credits/month, 25GB storage, 25GB bandwidth
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# FIREBASE (Notifications & Realtime Database)
# =============================================================================
# Create project: https://console.firebase.google.com/
# Download service account JSON and set path
FIREBASE_CREDENTIALS_PATH=path/to/firebase-service-account.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FCM_SERVER_KEY=your-fcm-server-key

# =============================================================================
# EMAIL - SendGrid (Recommended for production)
# =============================================================================
# Create account: https://sendgrid.com/
# Free tier: 100 emails/day
SENDGRID_API_KEY=SG.your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@lebenis.com

# Legacy SMTP (optional, for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# =============================================================================
# GEOLOCATION
# =============================================================================
# OpenRouteService (FREE, no credit card) - Get key at https://openrouteservice.org/dev/#/signup
# Optional: If not set, uses haversine formula (distance as the crow flies + 20%)
OPENROUTESERVICE_API_KEY=

# Google Maps (requires credit card, 200$/month free credit)
GOOGLE_MAPS_API_KEY=

# =============================================================================
# SMS (Optional)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# CELERY - Task Queue (Redis)
# =============================================================================
# Install: sudo apt install redis-server (Ubuntu) or brew install redis (macOS)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MOBILE MONEY - Orange Money (Côte d'Ivoire)
# =============================================================================
# Signup: https://developer.orange.com/signup
# Get credentials from: https://developer.orange.com/apis/orange-money-webpay/api-reference
ORANGE_MONEY_CLIENT_ID=your-sandbox-client-id
ORANGE_MONEY_CLIENT_SECRET=your-sandbox-client-secret
ORANGE_MONEY_MERCHANT_KEY=your-merchant-key
ORANGE_MONEY_BASE_URL=https://api.orange.com/orange-money-webpay/ci/v1
ORANGE_MONEY_ENVIRONMENT=sandbox

# =============================================================================
# MOBILE MONEY - MTN MoMo (Côte d'Ivoire)
# =============================================================================
# Signup: https://momodeveloper.mtn.com/
# Create API User: https://momodeveloper.mtn.com/api-documentation/testing/
# Get Subscription Key from your Products
MTN_MOMO_API_USER=your-api-user-uuid
MTN_MOMO_API_KEY=your-api-key
MTN_MOMO_SUBSCRIPTION_KEY=your-subscription-key
MTN_MOMO_ENVIRONMENT=sandbox

# =============================================================================
# MONITORING - Sentry (Optional but recommended)
# =============================================================================
# Create account: https://sentry.io/
# Free tier: 5K errors/month
SENTRY_DSN=

# =============================================================================
# CORS - Frontend URLs (Production)
# =============================================================================
CORS_ALLOWED_ORIGINS=https://lebenis.com,https://app.lebenis.com
FRONTEND_URL=https://lebenis.com
BACKEND_URL=https://api.lebenis.com